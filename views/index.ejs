<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <form action="/" method="post">
        <input type="text" name="heading" required autocomplete="off">
        <input type="text" name="body" id="" required autocomplete="off">
        <input type="submit">
    </form>
<div id="data-container">
    <% if (storage.length> 0) { %>
        <% storage.forEach((element, index)=> { %>
            <div>
                <form action="/visit" method="post">
                <a href="" onclick="triggerSubmission()">
                    <input type="hidden" name="index" id="" value=<%=index %>>
                <h1>
                    <%= element.heading %>
                </h1>
                </a>
                </form>
                <div>
                    <%= element.body %>
                </div>
                <form action="/delete" method="post">
                    <input type="hidden" name="index" id="" value=<%= index %>>
                    <span  class="triggerSpan" onclick="triggerSubmission(this)">
                        delete  
                    </span>
                </form>
            </div>
            <% }); %>
                <% } else { %>
                    <div>No data available</div>
                    <% } %>
</div>


                        <script src="./script/script.js"></script>
</body>

</html>